def sum_and_difference():
    # Ask the user for the first number, convert it from text to a float, and store it in num1
    num1 = float(input("Enter the first number: "))

    # Ask the user for the second number, convert it to a float, and store it in num2
    num2 = float(input("Enter the second number: "))

    # Add the two numbers together and print the result
    print("The sum is", num1 + num2)

    # Subtract the second number from the first and print the result
    print("The difference is", num1 - num2)
